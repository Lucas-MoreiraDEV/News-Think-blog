<%- include('partials/cabecalho') %>

<main class="conteudo">
    <form class="postformulario" action="/editar/confirm?postClicado=<%= postClicado.id%>" method="post">
        <label for="titulo">Editar Titulo da Mensagem</label>
        <input type="text", id="titulo", class="post__formulario__inputs" name="titulo", value="<%= postClicado.titulo%>", required>

        <label for="texto">Editar Mensagem</label>
        <textarea class="postformulario__inputtext post__formulario__inputs" id="texto", name="texto", required><%= postClicado.texto%></textarea>
        <button type="submit">Editar Post</button>
    </form>
</main>

